
<body>

    <%- include('navbar.ejs')  %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

    <h1>Applying for Hostel</h1>

    <form action="" method="post">
        <input class="form-control" type="text" name="name" placeholder="Enter Name" value="default" required>
        <br>

        <input class="form-control" type="text" name="reg_no" placeholder="Enter Registration No." value="default"
            required>
        <br>

        <input class="form-control" type="text" name="semester" placeholder="Enter Semester" value="default" required>
        <br>

        <input class="form-control" type="number" name="percentage" placeholder="Enter percentage" value="60" step="any"
            required>
        <br>

        <input class="form-control" type="text" name="address" placeholder="Enter Present Address" value="default"
            required>
        <br>
        <div class="col-auto my-1">
            <label class="mr-sm-2" for="inlineFormCustomSelect">Department</label>
            <select type="text" name="dept" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <% departmentsData.forEach(function(dept) { %>
                    <option value="<%= dept.name %>">
                        <%= dept.name %>
                    </option>
                    <% }); %>
            </select>
        </div>


        <br>

        <input class="form-control" type="text" name="guardian_name" placeholder="Enter Guardian Name" value="default"
            required>
        <br>

        <input class="form-control" type="text" name="guardian_phone" placeholder="Enter Guardian Contact No"
            value="default" required>
        <br>

        <select type="text" name="gender" placeholder="Select your Gender" required>
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>

        <input type="submit" class="btn btn btn-light" value="Apply">

    </form>

    <% if(typeof message!=='undefined' ){ %>

        <h3 style="color: green">
            <%= message %>
        </h3>

        <% } %>

    </main>

</body>