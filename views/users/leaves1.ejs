
<body>
  <%- include('navbar.ejs')  %>

  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

    <h1>Leaves</h1>
    <ol class="list-group list-group-numbered" style="text-align: left;">
      <% leavesList.forEach(function(leave) { %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">Reason: <%= leave.reason %></div>
            <p>Applied on: <%= leave.from %></p>
          </div>
          <span class="badge bg-light rounded-pill"><%= leave.status %></span>
        </li>
        <!-- <li>
          <h5>Student : <%= leave.reg_no %></h5>
          <p>Reason: <%= leave.reason %></p>
          <p>From: <%= leave.from %></p>
          <p>To: <%= leave.to %></p>
          <p>Status: <%= leave.status %></p>
          
        </li> -->
      <% }); %>
    </ol>
    </main>
    </body>