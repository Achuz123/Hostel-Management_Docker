            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Dashboard</h1>

                </div>

                <div class="col-lg-12">
                    <div class="row row-cols-auto d-flex align-items-center justify-content-between">

                        <div class="col">
                            <p class="statistics-title">Reg No</p>
                            <h3 class="rate-percentage">
                                <%= user.reg_no %>
                            </h3>
                            <p class="text-danger d-flex"><i class="mdi mdi-menu-down"></i><span>-0.5%</span></p>
                        </div>

                        <div class="col">
                            <p class="statistics-title">Allocated Hostel</p>
                            <h3 class="rate-percentage">
                                <%= user.hostel_allocated.hostel_name %>
                            </h3>

                        </div>
                        <div class="col">
                            <p class="statistics-title">Room No</p>
                            <h3 class="rate-percentage">
                                <%= user.hostel_allocated.room_no %>
                            </h3>
                            <p class="text-danger d-flex"><i class="mdi mdi-menu-down"></i><span>-0.5%</span></p>
                        </div>

                        <div class="col">
                            <p class="statistics-title">Warden</p>
                            <h3 class="rate-percentage">
                                <%= warden.name %>
                            </h3>
                            <p class="text-danger d-flex"><i class="mdi mdi-menu-down"></i><span>-0.5%</span></p>
                        </div>
                    </div>
                </div>

                <h2>Mess Details</h2>
                <div class="row">
                    <div class="col">
                        <div class="col">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Recent Leaves</h5>
                                    <table class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Day</th>
                                                <th>Breakfast</th>
                                                <th>Lunch</th>
                                                <th>Dinner</th>
                                            </tr>

                                        </thead>
                                        <tbody>
                                            <% for (let [day, menu] of mess) { %>
                                                <tr>
                                                    <td>
                                                        <%= day %>
                                                    </td>
                                                    <td>
                                                        <%= menu.breakfast %><a>
                                                    </td>
                                                    <td>
                                                        <%= menu.lunch %><a>
                                                    </td>
                                                    <td>
                                                        <%= menu.dinner %><a>
                                                    </td>
                                                </tr>
                                                <% }; %>
                                        </tbody>
                                    </table class="table table-hover table-bordered">
                                    <a href="/mess-details" class="btn btn-primary">View More Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br><br>
                <h2>Recent Leaves</h2>
                <div class="row">
                    <div class="col">
                        <div class="col">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Recent Leaves</h5>
                                    <table class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Reg No</th>
                                                <th>Reason</th>
                                                <th>From</th>
                                                <th>To</th>
                                                <th>Status</th>
                                            </tr>

                                        </thead>
                                        <tbody>
                                            <% leave.forEach(function(leave) { %>
                                                <tr>
                                                    <td>
                                                        <%= leave.reg_no %>
                                                    </td>
                                                    <td>
                                                        <%= leave.reason %>
                                                    <td>
                                                        <%= leave.from %>
                                                    </td>
                                                    <td>
                                                        <%= leave.to %>
                                                    </td>
                                                    <td>
                                                        <%= leave.status %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table class="table table-hover table-bordered">
                                    <a href="#" class="btn btn-primary">View All</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="shadow">
                            <a href="/mess-details"> <div class="alert alert-primary d-flex align-items-center" role="alert">
            
                                <div>
                                  View mess details
                                </div>
                              </div></a>
                        </div>
                    </div>


                </div>



