<body class="g-sidenav-show   bg-gray-100">
  <div class="min-height-300 bg-primary position-absolute w-100"></div>
  <aside
    class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-4 "
    id="sidenav-main">
    <div class="sidenav-header">
      <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none"
        aria-hidden="true" id="iconSidenav"></i>
      <a class="navbar-brand m-0" "
        target=" _blank">
        <img src="/assets/img/logo-ct-dark.png" class="navbar-brand-img h-100" alt="main_logo">
        <span class="ms-1 font-weight-bold">Warden Dashboard</span>
      </a>
    </div>
    <hr class="horizontal dark mt-0">
    <%- include('navbar.ejs') %>

      <div class="container-fluid py-4">
        <div class="row">
          <div class="col-12">
            <div class="card mb-4">
              <div class="card-header pb-0">
                <h6>Students Data</h6>
              </div>

              <% if (room.results.length===0) { %>
                <h4 class="text-center p-5">Users not found.</h4>
                <% } else { %>
                  <div class="card-body px-0 pt-0 pb-2 text-capitalize">
                    <div class="table-responsive p-0">
                      <table class="table align-items-center mb-0">
                        <thead>
                          <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Room No</th>
                            <th
                              class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2 pe-2">
                              Student Allocated
                            </th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                              Registration No.
                            </th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                              Action
                            </th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(i=0; i<room.results.length ; i++){ %>
                            <tr>
                              <td class="px-2">
                                <div class="d-flex px-3 py-1">
                                  <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm font-weight-bold">
                                      <%= room.results[i].bed_no %>
                                    </h6>
                                  </div>
                                </div>
                              </td>
                              <td class="text-xs text-center ps-2 pe-2">
                                <p class="mb-0 text-sm font-weight-bold">
                                  <%= room.results[i].student_allocated %>
                                </p>
                              </td>
                              <td class="align-middle text-center">
                                <p class="mb-0 text-sm font-weight-bold">
                                  <%= room.results[i].student_reg_no %>
                                </p>
                              </td>
                              <td class="align-middle text-center">
                                <a href="/warden/remove-boarder?q=<%= room.results[i].student_reg_no %>"
                                  class="text-secondary font-weight-bold text-xs" data-toggle="tooltip">
                                  <p class="text-xm font-weight-bold mb-0">Remove</p>
                                </a>
                              </td>
                            </tr>
                            <% } %>
                              <% let totalPages; if (room.results.length.capacity % 10==0) {
                                totalPages=room.results.length.capacity / 10; } else {
                                totalPages=Math.floor(room.results.length / 10) + 1; } %>
                        </tbody>
                      </table>


                      <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                          <% for (let i=1; i <=totalPages; i++) { %>
                            <li class="page-item"><a class="page-link"
                                href="/warden/boarder-list/?n=<%= hostelName %>&page=<%= i %>">
                                <%=i%>
                              </a></li>
                            <% } %>

                        </ul>
                      </nav>

                    </div>
                  </div>

                  <% } %>


            </div>
          </div>
        </div>

      </div>
      </main>

      <!--   Core JS Files   -->
      <script src="../assets/js/core/popper.min.js"></script>
      <script src="../assets/js/core/bootstrap.min.js"></script>
      <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
      <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
      <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
          var options = {
            damping: '0.5'
          }
          Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
      </script>
      <!-- Github buttons -->
      <script async defer src="https://buttons.github.io/buttons.js"></script>
      <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
      <script src="../assets/js/argon-dashboard.min.js?v=2.0.4"></script>
</body>