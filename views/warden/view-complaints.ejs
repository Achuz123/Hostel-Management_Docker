    <div class="container-fluid py-4">
      <div class="row">
        <div class="card">
          <div class="card-header">
            <h6 class="mb-0">Complaints Information</h6>
          </div>

          <div class="card-body mx-0">
            <ul class="list-group">
              <% if (complaints.results.length) { complaints.results.forEach(function(complaint) { %>
                <div class="row mx-0 mb-4">

                  <div class="card mx-0">
                    <div class="card-body">
                      <h5 class="card-title text-dark">
                        <%= complaint.title %>
                      </h5>
                      <p class="card-text text-dark">
                        <%= complaint.description %>
                      </p>
                      <p class="mb-0"><strong class="text-dark">Submitted by:</strong>
                        <%= complaint.submittedBy %>
                      </p>
                      <p class="mb-0"><strong class="text-dark">Registration No. :</strong>
                        <%= complaint.regNo %>
                      </p>
                      <p class="mb-0"><strong class="text-dark">Submitted on:</strong>
                        <%= complaint.date %>
                      </p>
                      <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-0"><strong class="text-dark">Status:</strong>
                          <% if (complaint.status=="Pending" ) { %>
                            <span class="badge badge-sm bg-warning">
                              <%= complaint.status %>
                            </span>
                            <% } else if (complaint.status=="Resolved" ) {%>
                              <span class="badge badge-sm bg-success">
                                <%= complaint.status %>
                              </span>
                              <% } %>

                        </p>
                        <% if (complaint.status==="Pending" ) { %>
                          <div class="text-end">
                            <a class="btn btn-link text-success text-gradient px-3 mb-0" href="javascript:;"
                              onclick="resolveComplaint('<%= complaint.complaint_id %>')"><i
                                class="fa fa-check me-2"></i>Mark as Resolved</a>
                          </div>
                          <% } %>
                      </div>
                    </div>
                  </div>

                </div>

                <% }); %>

            </ul>
          </div>
          <% } else { %>
            <div class="card-body">
              <p>No complaints to show!!!</p>
            </div>
            <% } %>

              <% let totalPages; if (complaints.results.length.capacity % 5==0) {
                totalPages=complaints.results.length.capacity / 5; } else {
                totalPages=Math.floor(complaints.results.length / 5) + 1; } %>


                <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-center">
                    <% for (let i=1; i <=totalPages; i++) { %>
                      <li class="page-item"><a class="page-link" href="/warden/view-complaints?page=<%= i %>">
                          <%=i%>
                        </a></li>
                      <% } %>

                  </ul>
                </nav>
