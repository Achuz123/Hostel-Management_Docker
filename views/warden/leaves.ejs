    <div class="container-fluid py-4">
      <h4 class="px-3 bold text-light">Leaves of Students</h4>
      <div class="row">
        <div class="col-md-14 mt-4">
          
          <div class="card">
            <!-- <div class="card-header pb-0 px-3">
              <h6 class="mb-0">Leaves Information</h6>
            </div> -->
            <div class="card-body pt-4 p-3">
              <ul class="list-group">
                <% if (leavesList.length ) {
                  leavesList.forEach(function(leave) { %>
                <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                  <div class="d-flex flex-column">
                    <h6 class="mb-3 text-sm">Student : <%= leave.reg_no %></h6>
                    <span class="mb-2 text-xs">Reason: <span class="text-dark font-weight-bold ms-sm-2"><%= leave.reason %></span></span>
                    <span class="mb-2 text-xs">From: <span class="text-dark ms-sm-2 font-weight-bold"><%= leave.from %></span></span>
                    <span class="mb-2 text-xs">To: <span class="text-dark ms-sm-2 font-weight-bold"><%= leave.to %></span></span>
                    <span class="mb-2 text-xs">Status: <span class="text-dark ms-sm-2 font-weight-bold text-capitalize">
                      <% if (leave.status === "pending") { %>
                      <%= leave.status %> 
              
                    <% } else if (leave.status === "approved") { %>
                      <%= leave.status %> 
                      <br>
                      
                    <% } else { %>
                      <%= leave.status %> 
                      <br>
                      
                    <% } %></span>
                    
                    </span>
                    
                    
                  </div>
                
                  <% if (leave.status === "pending") { %>
                  <div class="ms-auto text-end">
                    <a class="btn btn-link text-success text-gradient px-3 mb-0" href="javascript:;" onclick="approveLeave('<%= leave.leave_id %>')"><i class="fas fa-pencil-alt me-2"></i>Approve</a>
                    <a class="btn btn-link text-danger px-3 mb-0" href="javascript:;" onclick="rejectLeave('<%= leave.leave_id%>')"><i class="fas fa-trash-alt text-danger me-2" aria-hidden="true"></i>Reject</a>
                  </div>
                <% } %>

                </li>

                <% });
                } else { %>
                  <p>No leaves to show!!!</p>
              <% } %>
                
              </ul>
            </div>
          </div>
        </div>
      
      </div>
