

  
<body>

    <%- include('navbar.ejs')  %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    
    <div class="container">
   
    <h1>Add Hostel data</h1>

    <form action="" method="post">
        <input class="form-control" type="text" name="name" placeholder="Enter Name" required>
        <br>

        <input class="form-control" type="text" name="address" placeholder="Enter address" required>
        <br>

        <input class="form-control" type="text" name="contact" placeholder="Enter Phone No." required>
        <br>

        <input class="form-control" type="number" name="capacity" placeholder="Enter capacity" required>
        <br>

        <select type="text" name="type" placeholder="Select the type of hostel" required>
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>  
            <br>
          

            <% departmentsData.forEach(function(dept) { %>
                <input type="text" class="form-control" placeholder="<%= dept.name %>" aria-label="Department name" readonly>
                <input type="number" class="form-control" placeholder="Quota" name="dept[<%= dept.name %>][quota]" aria-label="Department quota">
                <input type="number" class="form-control" placeholder="Vacancy" name="dept[<%= dept.name %>][vacancy]" aria-label="Department quota">
                <br>
            <% }); %>
  

            <input type="submit" class="btn btn btn-danger" value="Create">

    </form>

    <% if(typeof message!=='undefined' ){ %>

        <h3 style="color: green">
            <%= message %>
        </h3>

        <% } %>

    </main>

</body>
</div>