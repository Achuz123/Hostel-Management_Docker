

<body>  

  <%- include('navbar.ejs')  %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        

  
     
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          
          <h2>Welcome, Admin!</h2>
          <h2 class="h2">Dashboard</h2>

        </div>

        <div class="col-lg-12">
          <div class="row row-cols-auto d-flex align-items-center justify-content-between" id="stats">
            <div class="col">
              <p class="statistics-title">Total Hostels</p>
              <h3 class="rate-percentage"><%= totalHostels %></h3>
            </div>
            <div class="col">
              <p class="statistics-title">Total Students</p>
              <h3 class="rate-percentage"><%= allocated %></h3>
            </div>
            <div class="col">
              <p class="statistics-title">Total Wardens</p>
              <h3 class="rate-percentage"><%= totalWardens %></h3>
            </div>
            <div class="col">
              <p class="statistics-title">New Applications</p>
              <h3 class="rate-percentage"><%= appliedStudents %></h3>
            </div>
          </div>
        </div>
        
    
        <h2>Section title</h2>
        <div class="row">
            <div class="col">
              <div class="card text-center">
                  <div class="card-body">
                    <h5 class="card-title">Recent Complaints</h5>
                    <table class="table table-hover table-bordered">
                      <thead>
                        <tr>
                          <th>Room No</th>
                          <th>Student Name</th>
                          <th>Reg No</th>
                        </tr>
                      </thead>
                      <tbody>
                          <% complaint.forEach(function(complaint) { %>
                                <tr>
                                  <td><%= complaint.title %></td>
                                  <td ><a href=""><%= complaint.description %><a></td>
                                  <td><%= complaint.status %></td>
                                </tr>
                              <% }); %>
                      </tbody>
                    </table class="table table-hover table-bordered">
                    <a href="/admin/viewComplaints" class="btn btn-warning">View All</a>
                  </div>
                </div>
              
            </div>
            <div class="col">
              <div class="col">
                  <div class="card text-center">
                      <div class="card-body">
                        <h5 class="card-title">Recent Leaves</h5>
                        <table class="table table-hover table-bordered">
                          <thead>
                            <tr>
                          <th>Room No</th>
                          <th>Student Name</th>
                          <th>Reg No</th>
                        </tr>
                            
                          </thead>
                          <tbody>
                              <% leave.forEach(function(leave) { %>
                                <tr>
                                  <td><%= leave.reg_no %></td>
                                  <td ><a href=""><%= leave.reason %><a></td>
                                  <td><%= leave.status %></td>
                                </tr>
                              <% }); %>
                          </tbody>
                        </table class="table table-hover table-bordered">
                        <a href="#" class="btn btn-warning">View All</a>
                      </div>
                    </div>
                  
                </div>
            </div>
          </div>
    </div>
  </div>

  </main>
  
</body>