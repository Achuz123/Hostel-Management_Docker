  <main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg"
      style="background-image: url('https://gumlet.assettype.com/pratidintime%2F2022-04%2F22a8fae6-c9d8-4e83-901c-d2a8b7cd6f3c%2F227926_gauhati_university_exam_1200x768.webp?format=auto'); background-position: top;">
      <span class="mask bg-gradient-dark opacity-6"></span>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5 text-center mx-auto">
            <h1 class="text-white mb-2 mt-5">Welcome!</h1>
            <p class="text-lead text-white">to Gauhati University Hostel Portal</p>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
          <div class="card z-index-0">
            <div class="card-header text-center pt-4">
              <h5>Admin Login</h5>
              <p class="mb-0">Enter your email and password to sign in</p>
            </div>
            <img src="https://seeklogo.com/images/G/gauhati-university-logo-C031FC616D-seeklogo.com.png"
              class="card-img-top" alt="..." style="padding: 0 5px 0 5px;
            width: 30%;
            height: 30%;
            margin-left: auto;
          margin-right: auto;">
            <div class="card-body">
              <form role="form" action="/admin" method="post">
                <div class="mb-3">
                  <input type="email" class="form-control" placeholder="Email" name="email" aria-label="Email" required>
                </div>
                <div class="mb-3">
                  <input type="password" class="form-control" placeholder="Password" name="password"
                    aria-label="Password" required>
                </div>
                <% if(typeof message !=='undefined' ){ %>

                  <lable style="color: red; font-size: small;">
                    <%= message %>
                  </lable>

                  <% } %>

                    <div class="text-center">
                      <input type="submit" class="btn bg-gradient-danger w-100 my-4 mb-2" value="Login">
                    </div>
                   
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>


  </main>
